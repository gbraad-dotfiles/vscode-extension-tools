{
  "name": "dotfiles-tools",
  "displayName": "gbraad's Dotfiles tools",
  "publisher": "gbraad",
  "author": {
    "name": "Gerard Braad",
    "email": "me@gbraad.nl"
  },
  "description": "A VSCode extension to automate tasks with `devenv.zsh` and `machine.zsh` from my dotfiles",
  "repository": {
    "type": "git",
    "url": "https://github.com/gbraad-vscode/dotfiles-tools"
  },
  "license": "MIT",
  "version": "0.6.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "extensionDependencies": [
    "gbraad.dotfiles-checker"
  ],
  "icon": "img/icon.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:devenv-helper.selectDevenv",
    "onCommand:devenv-helper.runDevenvSys",
    "onCommand:devenv-helper.runDevenvShell"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Dotfiles Tools",
      "properties": {
        "dotfiles-checker.outputChannel": {
          "type": "string",
          "default": "Dotfiles tools",
          "description": "Dotfiles tools output channel"
        }
      }
    },
    "commands": [
      {
        "command": "devenv-helper.selectDevenv",
        "title": "Select devenv",
        "enablement": "dotfiles-checker:isAvailable",
        "category": "Dotfiles"
      },
      {
        "command": "devenv-helper.runDevenvSys",
        "title": "Run `devenv [prefix] sys`",
        "enablement": "dotfiles-checker:isAvailable",
        "category": "Dotfiles"
      },
      {
        "command": "devenv-helper.runDevenvShell",
        "title": "Run `devenv [prefix] shell`",
        "enablement": "dotfiles-checker:isAvailable",
        "category": "Dotfiles"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "dependencies": {
    "ini": "^2.0.0"
  },
  "devDependencies": {
    "@types/ini": "^4.1.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
